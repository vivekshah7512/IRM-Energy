<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0f9"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back" />

        <com.vbs.irmenergy.utilities.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Payment Details"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            app:fontName="@string/font_semibold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/colorWhite"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ll_reg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1">

                        <Spinner
                            android:id="@+id/sp_payment_plan"
                            style="@style/spinner_style1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingEnd="42dp"
                            android:spinnerMode="dropdown" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:background="@color/colorLightViolet1" />

                    </RelativeLayout>

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Receipt Type"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_receipt_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="Registration"
                        android:textColor="@color/colorGray"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Receipt Date"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_receipt_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:hint="Select receipt date"
                        android:singleLine="true"
                        android:textColor="@color/colorGray"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Payment Mode"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1">

                        <Spinner
                            android:id="@+id/et_payment_type"
                            style="@style/spinner_style1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingEnd="42dp"
                            android:spinnerMode="dropdown" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:background="@color/colorLightViolet1" />

                    </RelativeLayout>

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Inst. No"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_inst_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:gravity="center_vertical"
                        android:hint="Enter inst. no"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/colorLightBlack1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Inst. Date"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_inst_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="Select inst. date"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="@color/colorLightBlack1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Amount"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:text="₹ 0"
                        android:textColor="@color/colorGray"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="MICR No."
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_micr_no"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:gravity="center_vertical"
                        android:hint="Enter MICR no."
                        android:padding="8dp"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/colorLightBlack1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Bank Name"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_border_box1">

                        <Spinner
                            android:id="@+id/sp_payment_bank_name"
                            style="@style/spinner_style1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingEnd="42dp"
                            android:clickable="false"
                            android:spinnerMode="dropdown" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:background="@color/colorLightViolet1" />

                    </RelativeLayout>

                    <com.vbs.irmenergy.utilities.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Remarks"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular" />

                    <com.vbs.irmenergy.utilities.CustomEditText
                        android:id="@+id/et_payment_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_border_box1"
                        android:gravity="top"
                        android:hint="Enter remarks"
                        android:minLines="3"
                        android:padding="8dp"
                        android:textColor="@color/colorLightBlack1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_11sdp"
                        app:fontName="@string/font_light" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.vbs.irmenergy.utilities.CustomButton
                android:id="@+id/btn_payment_submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/rounded_rectangle_button1"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                app:fontName="@string/font_semibold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>