<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0f9"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back" />

        <com.vbs.irmenergy.utilities.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Verify Payment Details"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            app:fontName="@string/font_semibold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/colorWhite"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Application No. :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_app_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Customer Name :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_cust_nmae"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Corporate Code :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_corporate_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Plan :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_plan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Receipt Type :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_receipt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Receipt Date :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_receipt_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Payment Mode :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_mode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Inst No. :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_inst_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Inst Date :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_inst_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Amount :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="MICR No. :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_micr_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Bank Name :"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_bank_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:gravity="right"
                            android:text="Remarks :"
                            android:layout_gravity="top"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_regular" />

                        <com.vbs.irmenergy.utilities.CustomTextview
                            android:id="@+id/tv_payment_remarks"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.65"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_10sdp"
                            app:fontName="@string/font_light" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.vbs.irmenergy.utilities.CustomButton
                android:id="@+id/btn_cust_verify"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/rounded_rectangle_button1"
                android:text="Verify &amp; Submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                app:fontName="@string/font_semibold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>